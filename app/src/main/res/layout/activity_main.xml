<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.samfield.tictack_sam.MainActivity"
    android:background="@drawable/background11"
    android:elevation="1dp">

    <ImageView
        android:id="@+id/box2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/box1"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:contentDescription="@string/box2"
        app:srcCompat="@drawable/unmarked1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/unmarked1"
        android:layout_alignTop="@+id/box4"
        android:layout_alignLeft="@+id/box2"
        android:layout_alignStart="@+id/box2"
        android:id="@+id/box5"
        android:clickable="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/unmarked1"
        android:layout_alignBottom="@+id/box5"
        android:layout_alignLeft="@+id/box3"
        android:layout_alignStart="@+id/box3"
        android:id="@+id/box6"
        android:clickable="true"
        android:contentDescription="@string/box6" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/unmarked1"
        android:layout_below="@+id/box4"
        android:layout_alignLeft="@+id/box4"
        android:layout_alignStart="@+id/box4"
        android:layout_marginTop="35dp"
        android:id="@+id/box7"
        android:clickable="true"
        android:contentDescription="@string/box7" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/unmarked1"
        android:layout_alignTop="@+id/box7"
        android:layout_alignLeft="@+id/box5"
        android:layout_alignStart="@+id/box5"
        android:id="@+id/box8"
        android:clickable="true"
        android:contentDescription="@string/box8" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/unmarked1"
        android:layout_alignTop="@+id/box8"
        android:layout_alignLeft="@+id/box6"
        android:layout_alignStart="@+id/box6"
        android:id="@+id/box9"
        android:clickable="true"
        android:contentDescription="@string/box9" />

    <ImageView
        android:id="@+id/box4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/box1"
        android:layout_alignStart="@+id/box1"
        android:layout_below="@+id/box1"
        android:layout_marginTop="17dp"
        android:clickable="true"
        android:contentDescription="@string/box4"
        app:srcCompat="@drawable/unmarked1" />

    <ImageView
        android:id="@+id/box1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="58dp"
        android:layout_toLeftOf="@+id/box2"
        android:layout_toStartOf="@+id/box2"
        android:clickable="true"
        android:contentDescription="@string/box1"
        app:srcCompat="@drawable/unmarked1" />

    <TextView
        android:text="@string/onGoing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:textAlignment="viewStart"
        android:fontFamily="monospace"
        android:layout_alignBottom="@+id/msgStatus"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/box8"
        android:layout_alignStart="@+id/box8" />

    <TextView
        android:text="@string/lblLosses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblLoss"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@+id/labelWins"
        android:layout_alignLeft="@+id/labelWins"
        android:layout_alignStart="@+id/labelWins"
        android:layout_marginTop="17dp" />

    <TextView
        android:text="@string/tvLosses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLoss"
        android:textColor="@android:color/holo_red_dark"
        android:layout_alignBaseline="@+id/lblLoss"
        android:layout_alignBottom="@+id/lblLoss"
        android:layout_alignLeft="@+id/tvWins"
        android:layout_alignStart="@+id/tvWins" />

    <TextView
        android:text="@string/lblWins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelWins"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_below="@+id/msgStatus"
        android:layout_alignLeft="@+id/msgStatus"
        android:layout_alignStart="@+id/msgStatus" />

    <TextView
        android:text="@string/tvWins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvWins"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:text="@string/lblDraws"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelWins"
        android:layout_alignLeft="@+id/lblLoss"
        android:layout_alignStart="@+id/lblLoss"
        android:id="@+id/lblDraw"
        android:textColor="@android:color/holo_green_light" />

    <TextView
        android:text="@string/tvDraws"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lblDraw"
        android:layout_alignLeft="@+id/tvWins"
        android:layout_alignStart="@+id/tvWins"
        android:id="@+id/tvDraws"
        android:textColor="@android:color/holo_green_light" />

    <TextView
        android:id="@+id/msgStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnQuit"
        android:layout_alignStart="@+id/btnQuit"
        android:layout_below="@+id/box7"
        android:layout_marginTop="34dp"
        android:text="@string/msgStatus"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnQuit"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblLoss"
        android:layout_marginTop="11dp"
        android:layout_toLeftOf="@+id/tvLoss"
        android:layout_toStartOf="@+id/tvLoss"
        android:background="@android:color/holo_red_dark"
        android:elevation="0dp"
        android:text="@string/quit"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnRst"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnQuit"
        android:layout_alignBottom="@+id/btnQuit"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/box8"
        android:layout_toRightOf="@+id/box8"
        android:background="@android:color/holo_green_light"
        android:text="@string/rst" />

    <ImageView
        android:id="@+id/box3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/box2"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_toEndOf="@+id/box2"
        android:layout_toRightOf="@+id/box2"
        android:clickable="true"
        android:contentDescription="@string/box3"
        app:srcCompat="@drawable/unmarked1" />

</RelativeLayout>
